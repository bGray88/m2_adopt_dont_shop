<h1><%= @application.name %></h1>
<h3>
  <%= @application.street_address %> 
  <%= @application.city %>, 
  <%= @application.state %> 
  <%= @application.zip_code %><br>
  <%= @application.description %><br>

  <% @pets.each do |pet| %>
    <h3><%= link_to "#{pet.name}", "pets/#{pet.id}" %></h3>
  <% end %>
  <br><h3><%= label :text, :status, 'Status: ' %></h3>
  <%= @application.status %><br>
</h3> 

<h2><%= label :text, :search, 'Add a Pet to this Application ' %></h2>
<%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
  <h2><%= f.label 'Search by Name: ' %>
  <%= f.text_field :search %>
  <%= f.submit "search" %></h2>
<% end %>

<% @pets.each do |pet| %>
  <h3><%= link_to "#{pet.name}", "pets/#{pet.id}" %></h3>
<% end %>
