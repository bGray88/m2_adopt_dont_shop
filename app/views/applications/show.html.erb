<h1><%= @application.name %></h1>
<h3>
  <%= @application.street_address %> 
  <%= @application.city %>, 
  <%= @application.state %> 
  <%= @application.zip_code %><br>
  <h3>
    <%= label :text, :description, 'Description: ' %>
    <%= @application.description %><br>
  </h3>

  <h3>
    <%= label :text, :pets_list, 'Available Pets: ' %><br>
  <% @pets.each do |pet| %>
    <pre><h3>   <%= link_to "#{pet.name}", "pets/#{pet.id}" %></h3></pre>
  <% end %>
  <h3>
    <%= label :text, :pets_list, 'Selected Pets: ' %><br>
    <% @selected_pets.each do |pet| %>
      <pre><h3>   <%= link_to "#{pet.name}", "pets/#{pet.id}" %></h3></pre>
    <% end %>
    <%= label :text, :status, 'Status: ' %>
    <%= @application.status %>
  </h3>
</h3>

<h2><%= label :text, :search, 'Add a Pet to this Application ' %></h2>
<%= form_with url: "/applications/#{@application.id}", method: :get, local: true do |f| %>
  <h2><%= f.label 'Search by Name: ' %>
  <%= f.text_field :search %>
  <%= f.submit "search" %></h2>
<% end %>

<% @search_pets.each do |pet| %>
  <h3>
    <%= link_to "#{pet.name}", "pets/#{pet.id}" %>
    <%= button_to "Adopt Me", "/applications/#{@application.id}?pet=#{pet.id}", method: :post, form: {style: 'display:inline-block;'}%>
  </h3>
<% end %>
